{
  "compilerOptions": {
    "lib": [
      "dom",
      "es2017",
    ],
    "moduleResolution": "node",
    "module": "commonjs",
    "sourceMap": true,
    "declaration": true,
    "target": "es2017",
    "rootDir": "../../../",
    "outDir": "../../../build", // https://github.com/microsoft/TypeScript/issues/29172
    "strict": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": false,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "esModuleInterop": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true
  },
  "exclude": [
    "../../../node_modules",
    "../../../build"
  ]
}
